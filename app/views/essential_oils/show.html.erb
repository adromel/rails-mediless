<div class="container">
  <div class="head-fixed">
    <%= link_to symptom_path do %>
      <i class="fa-solid fa-arrow-left fa-2x"></i>
    <% end %>
    <h1><%= @essential_oil.name %></h1>
  </div>
  <div class="oil-essential-picture">
    <img src="<%= @essential_oil.photo %>" alt="picture">
  </div>
  <div class="background-content center">
    <%= render 'shared/description' %>
    <% if @essential_oil.description.present?  %>
      <p><% @essential_oil.description.split(".").each do |p| %>
        <%= p  %> <br><br>
      <% end %></p>
    <% else %>

    <% end %>
    <div class="button-small mx-1">
      <% if @list_element.present? %>
        <%= link_to "Restaurer", list_element_path(@list_element), data: {turbo_method: :delete, turbo_confirm: "es-tu sûr de vouloir supprimer cette huile sauvegardée de ta liste ?"} %>
      <% else %>
        <%= link_to "Enregistrer", essential_oil_list_elements_path(@essential_oil), data: {turbo_method: :post} %>
      <% end %>
    </div>
  </div>
  <%= render "shared/btn_up" %>
</div>
